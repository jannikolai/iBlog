<%= content_for :title, "Eintrag #{@entry.new_record? ? 'erstellen' : 'bearbeiten'}" %>
<h2><%= @blog.name %></h2>

<% if @preview %>
  <%= render @entry %>
<% end %>

<%= simple_form_for([@blog, @entry], :html => { :class => 'form-horizontal'}) do |f| %>
  <legend>PPP-Eintrag <%= @entry.new_record? ? 'erstellen' : 'bearbeiten' %></legend>
  <%= f.input :title, :input_html => { :class => "span7" } %>

  <%= f.input :progress, :label => t('titles.progress'), :as => :text, :input_html => { :rows => 6, :class => "span7" } %>
  <%= f.input :plans, :label => t('titles.plans'), :as => :text, :input_html => { :rows => 6, :class => "span7" } %>
  <%= f.input :problems, :label => t('titles.problems'), :as => :text, :input_html => { :rows => 6, :class => "span7" } %>

  <%= f.input :tags_as_string, :label => "Tags", :input_html => { :class => "span7" } %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= f.button :submit, :value => 'Vorschau', :class => 'btn-info' %>
    <%= link_to 'LÃ¶schen', [@blog, @entry], :method => :delete, :class => "btn btn-danger" unless @entry.new_record? %>
  </div>

<% end %>
